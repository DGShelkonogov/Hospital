<Page x:Class="Hospital.Pages.DoctorRecordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="DoctorRecordPage">
    <Grid>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox 
                        Grid.Column="0"
                        x:Name="txtSearch" 
                        Margin="10,5,10,5" 
                        materialDesign:HintAssist.Hint="Поиск"/>
                    <Button
                        Grid.Column="1"
                        Click="Button_Click_Search"
                        Content="Поиск" Cursor="Hand"/>
                </Grid>

                <DataGrid Grid.Row="1" x:Name="dtg" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                                Header="Имя"
                                Binding="{Binding Path=Patient.Name}"/>
                        <DataGridTextColumn 
                                Header="Фамилия"
                                Binding="{Binding Path=Patient.LastName}"/>
                        <DataGridTextColumn 
                                Header="Отчество"
                                Binding="{Binding Path=Patient.MiddleName}"/>

                        <DataGridTextColumn 
                                Header="Дата и время"
                                Binding="{Binding Path=DateTime}"/>
                        <DataGridTextColumn 
                                Header="Статус"
                                Binding="{Binding Path=Status}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button 
                    Grid.Row="2"
                    Content="Отметить как выполненое" 
                    Margin="1,0,1,0"
                    Click="ButtonClickSave" Cursor="Hand"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
