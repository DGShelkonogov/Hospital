<Window x:Class="Hospital.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital"
        mc:Ignorable="d"
        Title="AdminMainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Доктора">
                <Frame Source="Pages/DoctorPage.xaml"/>
            </TabItem>
            <TabItem Header="Типы докторов">
                <Frame Source="Pages/DoctorTypePage.xaml"/>
            </TabItem>
            <TabItem Header="Лекарства">
                <Frame Source="Pages/DrugPage.xaml"/>
            </TabItem>
            <TabItem Header="Услуги">
                <Frame Source="Pages/MedicalServicePage.xaml"/>
            </TabItem>
            <TabItem Header="Выйти" MouseUp="TabItem_MouseUp">
                <Grid>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32" Text="Вкладка для выхода из аккаунта админа"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
